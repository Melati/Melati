#set $onVariableException = $melati.PassbackVariableExceptionHandler
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<HTML>
<HEAD>
 <title>$ml.rendered($melati.Table.DisplayName) Table Record Selection</title>
 <meta name="version" content="CVS \$Id$">
 <link rel="stylesheet" title="Default" href="$admin.ScreenStylesheetURL"
      type="text/css" media="screen">
</HEAD>

<BODY BGCOLOR="#eeeeee" id="selection">
<form action="">
<table cellspacing="0" cellpadding="1" border="0" width="100%">
#if ($results) #begin
  <tr>
    <td align="center">
  #if ($results.PrevPageStart) #begin
     <font face="Arial, Helvetica" size="-2">
      <input type="button" name="Previous" 
          title="Previous page" 
          value="&lt;&lt; Prev" 
          ONCLICK="location.href='?start=$results.PrevPageStart&amp;$whereClause&amp;$orderClause'">
     </font>
  #end
     <font face="Arial, Helvetica" size="-1"><b>
      Records $results.PageStart to $results.PageEnd of $results.TotalCount
     </b></font>

  #if ($results.NextPageStart) #begin
     <font face="Arial, Helvetica" size="-2">
       <input type="button" 
         name="Next" 
         title="Next page" 
         value="Next &gt;&gt;" 
         onclick="location.href='?start=$results.NextPageStart&amp;$whereClause&amp;$orderClause'" 
       />
     </font>
  #end
    </td>
  </tr>
  <tr>
   <th><FONT SIZE="-1">&nbsp;</FONT></th>
  #foreach $column in $table.SummaryDisplayColumns #begin
   <th align="left" valign="bottom">
    <font face="Arial, Helvetica" size="-1">
     <a href="?$whereClause&amp;field_order-1=$column.getColumnInfo().getTroid()">$ml.rendered($column.DisplayName)</a>&nbsp;
    </font>
   </th>
  #end
  </tr>
  #set $color1 = "#E9EDFD"
  #set $class1 = "row1"
  #set $color2 = "#FFFFFF"
  #set $class2 = "row2"
  #set $color = $color1
  #set $class = $class2
  #foreach $result in $results #begin
  <TR>
   <TD bgcolor="$color" class="$class">
     <font size="-1"><a 
         href='$admin.RightURL($result)?returnTarget=parent.parent.parent.admin_bottom.admin_left.admin_selection&amp;returnURL=$ml.encoded("$admin.SelectionURL($table)?start=$results.PageStart&amp;$whereClause&amp;$orderClause")' 
         target="admin_record" 
         title="Edit"><IMG src="$admin.StaticURL/file.gif" border="0" alt="Edit" /></a>&nbsp;
     </font>
   </TD>
    #foreach $field in $result.SummaryDisplayFields #begin
   <TD bgcolor="$color" class="$class">
     <font face="Arial, Helvetica" size="-1">
       $ml.renderedStart($field)&nbsp;
     </font>
   </TD>
    #end
  </TR>
    #if ($color == $color1) #begin
      #set $color = $color2
      #set $class = $class2
    #end #else #begin
      #set $color = $color1
      #set $class = $class1
    #end
  #end
  </TABLE>
#end

  </form>
 </BODY>
</HTML>
