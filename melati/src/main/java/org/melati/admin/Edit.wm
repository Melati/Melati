#set $ml = $melati.HTMLMarkupLanguage
$melati.setVariableExceptionHandler($melati.PassbackVariableExceptionHandler)
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<HTML>
<HEAD>
 <title>Edit a $ml.rendered($table.DisplayName) Record</title>
 <meta name="CVS Id" content="\$Id$">
 <link rel="stylesheet" title="Default" href="$admin.StaticURL/admin.css"
      type="text/css" media="screen">
<SCRIPT src="$melati.JavascriptLibraryURL/validation.js" type="text/javascript"></SCRIPT>

<script TYPE="text/javascript">
<!--
  function popupupdate(popupwin,returnfield,id,value) {
    var returnfieldummy = returnfield + "_dummy";
    document.forms[0].elements[returnfield].value = id;
    document.forms[0].elements[returnfieldummy].value = value;
    popupwin.close(); 
  }
//-->
</script>
</HEAD>

<BODY bgcolor="#cccccc">

<FORM METHOD="post" ACTION="Update">
<TABLE CELLPADDING="0" CELLSPACING="0">
  #if ($Form.detailed) #begin
    #set $fields = $object.DetailDisplayFields
  #end #else #begin
    #set $fields = $object.RecordDisplayFields
  #end
  #foreach $field in $fields #begin
    <TR><TD>&nbsp;</TD></TR>
    <TR>
     <TD><FONT SIZE="-1" FACE="Arial, Helvetica">
       <B>
        #if (!$field.Type.Nullable) #begin
         <font color="red">
         *
         </font>
        #end
        #if ($melati.isReferencePoemType($field)) #begin
         <a
          #if ($field.Raw) #begin
 href=$admin.RightURL($field.Type.targetTable().getObject($field.getRaw()))?returnTarget=&amp;returnURL=$ml.encoded("$admin.SelectionRightURL($table)")
          #end #else #begin
 href=$admin.SelectionRightURL($field.Type.targetTable())
          #end
 >
        #end
 $ml.rendered($field.DisplayName)
        #if ($melati.isReferencePoemType($field)) #begin
         </a>
        #end
       </B>
      </FONT>
      #if ($field.Description) #begin
      <FONT SIZE="-2" FACE="Arial, Helvetica">
	($ml.rendered($field.Description))
      </FONT>
      #end
     </TD>
    </TR>
    <TR><TD>
      <FONT SIZE="-1" FACE="Arial, Helvetica">
        #if ($field.UserEditable) #begin
          $ml.input($field)
        #end #else #begin
	  $ml.rendered($field)
        #end
      </font>
    </TD></TR>
  #end
  <TR><TD>&nbsp;</TD></TR>
  <tr>
   <td align="center">
    <FONT SIZE="-1" FACE="Arial, Helvetica">
<INPUT NAME="action" VALUE="Update" TYPE="submit"
       ONCLICK="return validate(this.form);">
&nbsp;&nbsp;
<INPUT NAME="action" VALUE="Delete" TYPE="submit"
       ONCLICK="return confirm(
                    'Please confirm that you want to delete this record')">
&nbsp;&nbsp;
#if ($Form.returnURL) #begin

  <input type="hidden" name="returnURL" value='$Form.returnURL'>
#end #else #begin
  #if ($CGI.HTTP_REFERER) #begin

    <input type="hidden" name="returnURL" value='$CGI.HTTP_REFERER'>
  #end
#end
#if ($Form.returnTarget) #begin

  <input type="hidden" name="returnTarget" value='$Form.returnTarget'>
#end
<INPUT NAME="action" VALUE="Duplicate" TYPE="submit"
       ONCLICK="return validate(this.form);">
    </font>
   </td>
  </tr>
</TABLE>

</FORM>

#if (!($Form.detailed || $object.Table.DetailDisplayColumnsCount == $object.Table.RecordDisplayColumnsCount)) #begin
<P>
 <FONT SIZE="-1" FACE="Arial, Helvetica">
  <A HREF='$melati.sameURLWith("detailed")'>More&nbsp;...</A>
 </FONT>
</P>
#end

$admin.specialFacilities($melati, $ml, $object)

</BODY>
</HTML>
