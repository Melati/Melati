<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.melati</groupId>
  <artifactId>maven-dsd-plugin</artifactId>
  <parent>
    <groupId>org.melati</groupId>
    <artifactId>melati-parent</artifactId>
    <version>0.7.5-RC4</version>
    <relativePath>../</relativePath>
  </parent>
  <packaging>maven-plugin</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>DSD Mojo</name>
  <url>http://melati.org/maven-dsd-plugin/</url>
  <description>
  A Maven MOJO plugin to run the POEM preprocessor during the process-sources 
  phase of a project.
  </description>
  <issueManagement>
   <system>SF List</system>
    <url>       
http://sourceforge.net/mailarchive/forum.php?forum=melati-cvs
    </url>
  </issueManagement>

  <organization>
    <name>PanEris</name>
    <url>http://www.paneris.org/</url>
  </organization>

  <ciManagement/>

  <distributionManagement>
    <repository>
      <id>default</id>
      <name>Default Repository</name>
      <url>scp://www.melati.org/data/www/maven2/</url>
    </repository>
    <site>
      <id>website</id>
      <url>scp://www.melati.org/data/www/melati/maven-dsd-plugin/</url>
    </site>
  </distributionManagement>  

  <scm>
    <connection>
      scm:cvs:pserver:anonymous@melati.org:/usr/cvsroot:melati/maven/maven-dsd-plugin
    </connection>
    <developerConnection>
      scm:cvs:ext:timp@melati.org:/usr/cvsroot:melati/maven/maven-dsd-plugin
    </developerConnection>

    <url>
      http://melati.org/cgi-bin/cvsweb.cgi/melati/
    </url>
  </scm>
  <developers>
    <developer>
      <name>Tim Pizey</name>
      <id>timp</id>
      <email>timp@paneris.org</email>
      <organization>PanEris</organization>
      <organizationUrl>http://PanEris.org/</organizationUrl>
      <roles>
        <role>Maintainer</role>
        <role>Maven maven</role>
        <role>Developer</role>
      </roles>
      <timezone>0</timezone>
      <url>http://paneris.org/~timp</url>
    </developer>
  </developers>

  <dependencies>
    <dependency>
     <groupId>org.melati</groupId>
     <artifactId>melati</artifactId>
     <version>0.7.5-RC4</version>
    </dependency>
    <dependency>
      <groupId>org.apache.maven</groupId>
      <artifactId>maven-plugin-api</artifactId>
      <version>2.0</version>
    </dependency>
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
      <version>3.8.1</version>
      <!-- scope>test</scope -->
    </dependency>
  </dependencies>
  <build>
   <resources>
    <resource>
     <directory>${basedir}</directory>
     <targetPath>META-INF</targetPath>
     <includes>
      <include>NOTICE.txt</include>
     </includes>
    </resource>
   </resources>
  </build>
  <reporting>
   <plugins>
    <plugin>
     <groupId>org.apache.maven.plugins</groupId>
     <artifactId>maven-checkstyle-plugin</artifactId>
     <configuration>
      <configLocation>${basedir}/checkstyle.xml</configLocation>
      <xrefLocation>xref</xrefLocation>
     </configuration>
    </plugin>
   </plugins>
  </reporting>
</project>
