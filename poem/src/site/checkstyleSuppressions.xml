<?xml version="1.0"?>
<!DOCTYPE suppressions PUBLIC
    "-//Puppy Crawl//DTD Suppressions 1.0//EN"
    "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">

<suppressions>
    <!-- We do have a few -->
    <suppress checks="MagicNumber"
              files=".java" />
    <!-- Narrative code is cool in tests -->
    <suppress checks="MagicNumber"
              files="Test.java" />
    <suppress checks="Javadoc"
              files="Test.java" />
    <suppress checks="EmptyBlock"
              files="Test.java" />
    <suppress checks="Header"
              files="/test/" />

     
    <!-- There are that many things you need to pass in -->
    <suppress checks="ParameterNumber"
              files="BaseFieldAttributes.java" />
    <suppress checks="ParameterNumber"
              files="PoemDatabaseFactory.java" />

    <suppress checks="MagicNumber"
              files="DatePoemtype.java" />

    <!-- Perfectly proper use of empty statements -->
    <suppress checks="EmptyStatement"
              files="Transactioned.java" />
    

    <!-- it is just a biggy, OK -->
    <suppress checks="FileLength"
              files="Table.java" />
    <!-- OK proably needs fixing -->
    <suppress checks="LineLength"
              files="FirstSQL.java" />
    <!-- Name deliberately chosen -->
    <suppress checks="LocalVariableName"
              files="FieldSet.java" />

    <!-- Quite elegant really -->
    <suppress checks="InnerAssignment"
              files="Searchability.java" />
    <suppress checks="InnerAssignment"
              files="PoemTypeFactory.java" />
    <suppress checks="InnerAssignment"
              files="DisplayLevel.java" />
    <suppress checks="InnerAssignment"
              files="StandardIntegrityFix.java" />
    <suppress checks="InnerAssignment"
              files="Postgresql.java" />

    <!-- no way to shorten output statements -->
    <suppress checks="MethodLength"
              files="TableDef.java" />

    <!-- Generated files -->
    <suppress checks="MagicNumber"
              files="generated" />
    <suppress checks="MethodLength"
              files="generated" />
    <suppress checks="InnerAssignment"
              files="generated" />
    <suppress checks="RedundantThrows"
              files="generated" />
    <suppress checks="LineLength"
              files="generated" />
    <suppress checks="NewlineAtEndOfFile"
              files="generated" />
    <suppress checks="Header"
              files="generated" />


    <!-- checkstyle wrong -->
    <suppress checks="DoubleCheckedLocking"
              files="Table.java" />
</suppressions>
