#set $onVariableException = $melati.PassbackVariableExceptionHandler
#set $returnTarget = $Form.returnTarget
#if ($returnTarget == null) #begin
#set $returnTarget = ""
#end
#set $returnURL = $Form.returnURL
#if ($returnURL == null) #begin
#set $returnURL = ""
#end
<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html>
<head>
 <title>Edit a $ml.rendered($table.DisplayName) Record</title>
 <meta name="CVS Id" content="\$Id$">
 <link rel="stylesheet" title="Default" href="$admin.StaticURL/admin.css"
      type="text/css" media="screen">
</head>

<body bgcolor="#E9EDFD">
<table cellpadding="4" cellspacing="4" width="100%">
 <tr>
  <td valign="top">
   <a href="$admin.TreeURL($object)?returnTarget=$returnTarget&amp;returnURL=$returnURL"
target="admin_edit$object.Table.Name$object.troid()" title="Display tree view">
   <img src="$admin.StaticURL/tree.gif" alt="Tree view" border="0" />
   </a>
   &nbsp;<div style='display:inline;' #if($table.Description) #begin title='$table.Description' #end>
   <font face="Arial, Helvetica" size="2">$table.DisplayName</font></div><font face="Arial, Helvetica" size="2">:
<a href= "$admin.EditURL($object)?returnTarget=$returnTarget&amp;returnURL=$returnURL"
target="admin_edit$object.Table.Name$object.troid()"
title="Display $ml.rendered($object.toString())">
$ml.rendered($object.toString())</a>
   </font>
  </td>
#set $references = $database.referencesTo($table)
#if ($references.hasMoreElements()) #begin
  <td align="right" valign="top">
   <p>
    <font face="Arial, Helvetica" size="-1">
#foreach $column in $references #begin
[&nbsp;<a href=$admin.SelectionRightURL($column.Table)?field_$ml.rendered($column.Name)=$ml.Attr.rendered($object.Troid) 
          target="admin_edit$object.Table.Name$object.troid()"
          title="Show associated $column.Table.DisplayName records">$column.Table.DisplayName</a>&nbsp;]
#end
    </font>
   </p>
  </td>
#end 
</tr>
</table>
</body>
</html>

