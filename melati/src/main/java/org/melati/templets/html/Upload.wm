## Upload an ordinary file.

#set $admin = $melati.getContextUtil("org.melati.admin.AdminUtils")

#if ($field.Height != 1) #begin
  <textarea name="field_$ml.rendered($field.Name)"
            cols=$field.Width
#if ($field.Description) #begin
            title="$field.Description" 
#end
            rows=$field.Height>$ml.rendered($field.RawString)</textarea>
#end #else #begin
  <input name="field_$ml.rendered($field.Name)" 
         size="$field.Width"
#if ($field.Description) #begin
         title="$field.Description"
#end
         value="$ml.Attr.rendered($field.RawString)" />
#end
<br />
<a href="javascript:void()" onclick="upload_$ml.escaped($field.Name)();return false">Upload new file</a>

<script language="JavaScript1.2" type="text/javascript">
  add_rule("field_$ml.escaped($field.Name)",
           "$ml.escaped($field.DisplayName)",
           !$field.Type.Nullable)
</script>
<script language="JavaScript1.2" type="text/javascript">
var uploadwin_$ml.escaped($field.Name);
function upload_$ml.escaped($field.Name) () {
  uploadwin_$ml.escaped($field.Name)
    = window.open('$admin.UploadURL($melati.Table,$melati.Object,$field)',
                  '$ml.escaped($field.Name)',
                  'width=400,height=100,resizable=yes,scrollbars=yes');
}

function update_$ml.escaped($field.Name) (url) {
  document.forms[0].field_$(ml.rendered($field.Name)).value = url;
  uploadwin_$(ml.escaped($field.Name)).close();
}
</script>
