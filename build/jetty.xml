<?xml version="1.0"  encoding="ISO-8859-1"?> 
<!DOCTYPE Configure PUBLIC "-//Mort Bay Consulting//DTD Configure 1.2//EN" "http://jetty.mortbay.org/configure_1_2.dtd">

<Configure class="org.mortbay.jetty.Server">

  <!-- ============================================================= -->
  <!--  A simple Jetty setup for Melati                              -->
  <!--                                                               -->
  <!-- $Date$                                  -->
  <!-- $Author$                                               -->
  <!--                                                               -->
  <!-- ============================================================= -->

  <!-- ============================================================= -->
  <!-- Add and configure a listener to port 8080                     -->
  <!-- _____________________________________________________________ -->
  <Call name="addListener">
    <Arg>
      <New class="org.mortbay.http.SocketListener">
        <Set name="Port"><SystemProperty name="jetty.port" default="8080"/></Set>
        <Set name="MinThreads">5</Set>
        <Set name="MaxThreads">255</Set>
        <Set name="MaxIdleTimeMs">30000</Set>
        <Set name="MaxReadTimeMs">10000</Set>
        <Set name="MaxStopTimeMs">5000</Set>
        <Set name="LowResourcePersistTimeMs">5000</Set>
      </New>
    </Arg>
  </Call>

  
  <!-- ============================================================= -->
  <!-- Add a single web application                                  -->
  <!-- _____________________________________________________________ -->

  <Call name="addWebApplication">
    <Arg>/</Arg>
    <Arg>./dist/packaged/melati.war</Arg>
    <Set name="extractWAR">false</Set>
  </Call>

<!-- Can't put the war inside itself;
     Hence these links will only work 
     if running using ant all in the build directory.
-->
  <Call name="addContext">
    <Arg>/download</Arg>
    <Set name="ResourceBase">dist/packaged</Set>
    <Set name="ServingResources">TRUE</Set>
  </Call>
<!--
  These are now in the .war
  <Call name="addContext">
    <Arg>/melati-static</Arg>
    <Set name="ResourceBase">../</Set>
    <Set name="ServingResources">TRUE</Set>
  </Call>
  <Call name="addContext">
    <Arg>/javadoc</Arg>
    <Set name="ResourceBase">../qa/javadoc</Set>
    <Set name="ServingResources">TRUE</Set>
  </Call>
-->

</Configure>



